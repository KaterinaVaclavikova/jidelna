generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  password     String
  role         String   // ADMIN_MEAL, ADMIN_USER, EMPLOYEE
  isFirstLogin Boolean  @default(true)
  orders       Order[]
}

model Meal {
  id     Int      @id @default(autoincrement())
  name   String
  price  Float
  date   DateTime // Represents the specific day this meal is offered
  orders Order[]
}

model Order {
  id     Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  userId Int
  meal   Meal     @relation(fields: [mealId], references: [id])
  mealId Int
  date   DateTime // Redundant but useful for quick queries
}
